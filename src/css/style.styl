// Import all partials
@require './_*.styl'

.contain-all
  height 100vh
  overflow scroll

header
  text-align center
  padding 1em 0 .5em
  color white
  position relative
  h1
    display flex
    justify-content: center;
    margin 0
  .add-trigger
    padding .4em 1em
    position absolute
    right 0
    top .5em
    margin 0

.tags-wrap
  padding 1em 0
  a
    display inline-block
    padding 0 .5em
    color $textPrimary
    border 1px solid $textPrimary
    border-radius 3px
    margin 0 .2em
    text-decoration none
    -webkit-user-select: none
    -moz-user-select: none
    -ms-user-select: none
    user-select: none

.card-container
  padding-bottom 2em
  .create-btn-wrap
    text-align right
    a
      display inline-block
      color white
      border 1px solid white
      border-radius 2em
      padding .5em 1em
      margin 1em 2em .5em
      user-select none
      &.back
        color $textPrimary
        background-color white

.card
  background-color white
  width 90%
  padding .5em 1em
  margin 1em auto
  box-shadow: 0 0 30px -6px;
  border-radius: 4px;
  h4
    .gray
      color #c3c3c3
    span.fa
      float right
      font-size .8em
      line-height 1em
  &.project-form
    h4 span.fa
       line-height 2em
  .contact-chip
    display flex
    align-items center
    margin .5em 0
    padding-right 2em
    .img-wrap
      height 35px
      width 35px
      position relative
      border-radius 50%
      margin-right 1em
      overflow hidden
      display inline-flex
      justify-content center
      align-items center
      background-color #c3c3c3
      img
        height auto
        width 100%
        filter grayscale(.5)
  &.project-form
    input, textarea
      display block
      width 100%
      margin .5em 0
      padding .5em 1em
      border 1px solid #c3c3c3
      outline none
      &:focus, &:active
        border 1px solid $textPrimary
      &[type='submit']
        margin-top 2em
        color $textPrimary
        border 1px solid $textPrimary
        background none
  .req-wrap
    position relative
    .overlay
      background-color #FFFFFFAA
      display flex
      justify-content center
      align-items center
      position absolute
      top 0
      left 0
      height 100%
      width 100%
      user-select none
      a
        padding .5em 1em
        background-color $textPrimary
        color white
  p
    font-size .8em
